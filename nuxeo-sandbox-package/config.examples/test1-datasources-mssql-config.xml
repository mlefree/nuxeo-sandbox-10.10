<?xml version="1.0"?>
<component name="datasources-mssql-config">

    <extension target="org.nuxeo.runtime.datasource" point="datasources">
        <datasource name="jdbc/repository_mssql"
                    xaDataSource="com.microsoft.sqlserver.jdbc.SQLServerXADataSource"
                    maxPoolSize="100" minPoolSize="5" blockingTimeoutMillis="10000">
            <property name="ServerName">mssql</property>
            <property name="PortNumber">1433</property>
            <property name="DatabaseName">nuxeo</property>
            <property name="User">sa</property>
            <property name="Password">Password0!</property>
        </datasource>
        <link name="jdbc/repository_mssql" global="jdbc/nuxeo" type="javax.sql.DataSource"/>
    </extension>
</component>
